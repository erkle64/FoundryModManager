<Window x:Class="FoundryModManager2024.ApplyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoundryModManager2024"
        mc:Ignorable="d" Width="450" Background="DarkGray" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="/logo.png" WindowStyle="None" SizeToContent="Height" Topmost="True">
    <StackPanel Orientation="Vertical" Margin="0">
        <TextBlock x:Name="StatusLabel" Text="Apply mod configuration..." TextAlignment="Center" FontSize="14" Padding="0,2,0,2" />
        <ProgressBar IsIndeterminate="True" Height="20" Margin="8, 0, 8, 8"/>
    </StackPanel>
</Window>
